// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model nft {
  id          Int       @default(autoincrement()) @id
  tokenId     Int       @unique
  photoCID    String    @db.VarChar(255) @unique
  metadataCID String    @db.VarChar(255) @unique
  photoCDN    String    @db.VarChar(255) @unique
  creator     String    @db.VarChar(42)
  title       String    @db.VarChar(60)
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())
}

model user {
  id          String    @default(cuid())  @id
  address     String    @db.VarChar(42)   @unique
  email       String    @db.VarChar(255)  @unique
  username    String    @db.VarChar(30)   @unique
  invites     invite[]
  draft       draftNft[]
}

model draftNft {
  id          Int       @default(autoincrement()) @id
  userId      String
  user        user      @relation(fields:  [userId], references: [id])
  photoCID    String    @db.VarChar(255) @unique
  metadataCID String?   @db.VarChar(255) @unique
  photoCDN    String    @db.VarChar(255) @unique
  creator     String?   @db.VarChar(42)
  title       String?   @db.VarChar(60)
  description String?   @db.VarChar(255)
}

model invite {
  id          Int       @default(autoincrement()) @id
  userId      String
  user        user      @relation(fields:  [userId], references: [id])
  code        String    @default(cuid())  @unique
  valid       Boolean   @default(true)
}