// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_DB")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model nft { 
  id            Int       @default(autoincrement()) @id
  tokenId       Int       @unique @map(name: "token_id")
  photoCID      String    @db.VarChar(255) @unique @map(name: "photo_cid")
  metadataCID   String    @db.VarChar(255) @unique @map(name: "metadata_cid")
  photoCDN      String    @db.VarChar(255) @unique @map(name: "photo_cdn")
  creator       String    @db.VarChar(42)
  title         String    @db.VarChar(60)               
  description   String    @db.VarChar(255)
  createdAt     DateTime  @default(now()) @map(name: "created_at")

  @@map(name: "nfts")
} 

model user {
  id            String    @default(cuid())  @id
  address       String    @db.VarChar(42)   @unique
  email         String    @db.VarChar(255)  @unique
  username      String    @db.VarChar(30)   @unique
  invites       invite[]
  draft         draftNft[]

  @@map(name: "users")
}

model draftNft {
  id            Int       @default(autoincrement()) @id
  userId        String    @map(name: "user_id")
  user          user      @relation(fields:  [userId], references: [id])
  photoCID      String    @db.VarChar(255) @unique @map(name: "photo_cid")
  metadataCID   String?   @db.VarChar(255) @unique @map(name: "metadata_cid")
  photoCDN      String    @db.VarChar(255) @unique @map(name: "photo_cdn")
  photoCDNid    String    @unique @map(name: "photo_cdn_id")
  photoS3       String    @unique @map(name: "photo_s3")
  metadataS3    String?   @unique @map(name: "metadata_s3")
  title         String?   @db.VarChar(60)
  description   String?   @db.VarChar(255)

  @@map(name: "draft_nfts")
} 

model invite {
  id            Int       @default(autoincrement()) @id
  userId        String    @map(name: "user_id")
  user          user      @relation(fields:  [userId], references: [id])
  code          String    @default(cuid()) @unique
  valid         Boolean   @default(true)

  @@map(name: "invites")
}